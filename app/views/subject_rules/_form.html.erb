<%= simple_form_for(@subject_rule, url: [@workflow, @subject_rule]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :condition, label: 'Condition' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to 'Back', workflow_path(@workflow, anchor: 'rules'), class: 'btn btn-default' %>
  </div>
<% end %>
