apiVersion: batch/v1
kind: Job
metadata:
  name: __JOB_NAME__
spec:
  template:
    spec:
      containers:
      - name: caesar-rake-task-staging
        image: zooniverse/caesar:__IMAGE_TAG__
        command: ["bundle",  "exec", "rake", __RAKE_TASK_NAME__]
        envFrom:
        - secretRef:
            name: caesar-staging-environment
        - secretRef:
            name: caesar-staging-env-vars
      restartPolicy: Never
  backoffLimit: 1